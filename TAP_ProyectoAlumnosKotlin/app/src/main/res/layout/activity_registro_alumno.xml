<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#d3d3d3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroProfe">

    <EditText
        android:id="@+id/nombreRegistro"
        android:hint="Nombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/nControlRegistro"
        android:layout_marginTop="10dp"
        android:hint="Numero de control"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/carreraRegistro"
        android:layout_marginTop="10dp"
        android:hint="Carrera"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/semestreRegistro"
        android:layout_marginTop="10dp"
        android:hint="Semestre"
        android:inputType="number"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passwordAlumnoRegistro"
        android:layout_marginTop="10dp"
        android:hint="ContraseÃ±a"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_marginTop="10dp"
        android:text="Guardar"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_marginTop="10dp"
        android:text="Cancelar"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</LinearLayout>